datasource sqlite {
  provider = "sqlite"
  url = "file:./dev.db"
}

model User {
  id         Int   @id @default(autoincrement())
  email      String   @unique
  username   String   @unique
  password   String
  isAdmin    Boolean? @default(true)
  isVerified Boolean? @default(false)
  tokenAccount String
}
